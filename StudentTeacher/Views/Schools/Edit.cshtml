@model StudentTeacher.Models.School

@{
    ViewData["Title"] = "Edit";

    //Get List of Campuses from Back-End
    List<Campus> campuses = ViewBag.ListCampuses;
}

<div id="Lec_Login">
    <img src="~/images/EditSchool.png" />
    <br />
    <br />
    <form method="post" asp-action="Edit">
        <div class="form-group">
            <div class="form-floating mb-3">
                <input name="Name" type="text" class="form-control" id="floatingName" placeholder="eg. Sunridge Primary School" required value="@ViewBag.Name">
                <label for="floatingInput">School Name</label>
            </div>
            <div class="form-floating mb-3">
                <select name="Province" type="text" class="form-select" id="floatingProvince" placeholder="eg. Eastern Cape" required>
                    <option value="Eastern Cape">Eastern Cape</option>
                    <option value="Free State">Free State</option>
                    <option value="Gauteng">Gauteng</option>
                    <option value="KwaZulu-Natal">KwaZulu-Natal</option>
                    <option value="Limpopo">Limpopo</option>
                    <option value="Mpumalanga">Mpumalanga</option>
                    <option value="North West">North West</option>
                    <option value="Western Cape">Western Cape</option>
                </select>
                <label for="floatingInput">Province</label>
            </div>
            <div class="form-floating mb-3">
                <select name="Campus" type="text" class="form-select" id="floatingCampus" placeholder="eg. Port Elizabeth, Eastern Cape" required>
                    @foreach (var campus in campuses)
                    {
                        <option value="@campus.Code">@campus.City, @campus.Province</option>
                    }
                </select>
                <label for="floatingPassword">Varsity College Campus</label>
            </div>
        </div>
        <br />
        <div id="buttons">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <button asp-action="Details" asp-route-id="@Model.Code" class="btn btn-succes" style="background-color: #084E62; color: white; margin-top: 4px;">Back</button>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

            
<style>
    #Lec_Login {
        width: 35%;
        margin: auto;
        margin-top: 3%;
        padding: 3%;
        box-shadow: 0px 0px 15px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    #Lec_Login {
        background-color: white;
    }

        #Lec_Login img {
            width: 80%;
        }

    #tbl_or {
        width: 100%;
    }

        #tbl_or td {
            width: 33%;
            text-align: center;
        }

    #buttons button, #buttons a {
        width: 100%;
    }
</style>