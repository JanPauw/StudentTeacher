@model StudentTeacher.Models.Lecturer

@{
    ViewData["Title"] = "Edit";
}

<div id="Lec_Login">
    <img src="~/images/EditLecturer.png" />
    <br />
    <br />
    <form method="post" asp-action="Edit">
        <div class="form-group">
            <div class="form-floating mb-3">
                <input name="FirstName" type="text" class="form-control" id="floatingFirstName" placeholder="eg. John" required value="@ViewBag.firstName" />
                <label for="floatingInput">First Name</label>
            </div>
            <div class="form-floating mb-3">
                <input name="LastName" type="text" class="form-control" id="floatingLastName" placeholder="eg. Doe" required value="@ViewBag.lastName"/>
                <label for="floatingInput">Last Name</label>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Campus" class ="form-control" asp-items="ViewBag.Campus"></select>
                <label for="floatingInput">Campus</label>
            </div>
        </div>
        <br />
        <div id="buttons">
            <button type="submit" class="btn btn-success">Save Changes</button>
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

            
<style>
    #Lec_Login {
        width: 35%;
        margin: auto;
        margin-top: 3%;
        padding: 3%;
        box-shadow: 0px 0px 15px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    #Lec_Login {
        background-color: white;
    }

        #Lec_Login img {
            width: 80%;
        }

    #tbl_or {
        width: 100%;
    }

        #tbl_or td {
            width: 33%;
            text-align: center;
        }

    #buttons button, #buttons a {
        width: 100%;
    }
</style>