@model StudentTeacher.Models.Campus

@{
    ViewData["Title"] = "Details";
    List<Student> students = ViewBag.StudentList;
    List<School> schools = ViewBag.SchoolList;
}

@*Main Content*@
<label class="h1">Campus Details: @Model.Name</label>
<div id="div1" class="table-responsive">
    <a id="btnEdit" style="float: right;" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Code">
        <i class="bi bi-pencil-square"></i> Edit Details
    </a>
    <br />
    <table id="tblNameCode">
        <thead>
            <tr>
                <th>
                    Campus Name
                </th>
                <th>
                    Campus Code
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.Name
                </td>
                <td>
                    @Model.Code
                </td>
            </tr>
        </tbody>
    </table>
    <br />
</div>
<div id="div1" class="table-responsive">
    <table id="tblCityProvince">
        <thead>
            <tr>
                <th>
                    City
                </th>
                <th>
                    Province
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.City
                </td>
                <td>
                    @Model.Province
                </td>
            </tr>
            <tr>
            </tr>
        </tbody>
    </table>
</div>
<br />
<hr />
<br />

<label class="h1">Related Schools</label>
<div id="div1" class="table-responsive">
    <table id="tblSchools">
        <thead>
            <tr>
                <th>
                    Code
                </th>
                <th>
                    Name
                </th>
                <th>
                    Quintile
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var school in @schools)
            {
                <tr>
                    <td>
                        @school.Code
                    </td>
                    <td>
                        @school.Name
                    </td>
                    <td>
                        @school.Quintile
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<br />
<hr />
<br />

<label class="h1">Students</label>
<div id="div1" class="table-responsive">
    <table id="tblStudentsInSchool">
        <thead>
            <tr>
                <th>
                    Student Number
                </th>
                <th>
                    Name
                </th>
                <th>
                    Qaulification
                </th>
                <th>
                    Year of study
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var student in @students)
            {
                <tr>
                    <td>
                        @student.Number
                    </td>
                    <td>
                        @student.FirstName @student.LastName
                    </td>
                    <td>
                        @student.Qualification
                    </td>
                    <td>
                        @student.YearOfStudy
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <br />
    <hr />
    <br />

</div>

