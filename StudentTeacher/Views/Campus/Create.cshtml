@{
    ViewData["Title"] = "Add School";

    //Get List of Campuses from Back-End
    List<Campus> campuses = ViewBag.ListCampuses;
}
@*Test Deployment*@
<div id="Lec_Login">
    <img src="~/images/AddCampus.png" />
    <br />
    <br />
    <form method="post" asp-action="Create">
        <div class="form-group">
            <div class="form-floating mb-3">
                <input name="Name" type="text" class="form-control" id="floatingName" placeholder="eg. Durban North" required>
                <label for="floatingInput">Campus Name</label>
            </div>
            <div class="form-floating mb-3">
                <select name="Province" type="text" class="form-select" id="floatingProvince" placeholder="eg. Eastern Cape" required>
                    <option value="Eastern Cape">Eastern Cape</option>
                    <option value="Free State">Free State</option>
                    <option value="Gauteng">Gauteng</option>
                    <option value="KwaZulu-Natal">KwaZulu-Natal</option>
                    <option value="Limpopo">Limpopo</option>
                    <option value="Mpumalanga">Mpumalanga</option>
                    <option value="North West">North West</option>
                    <option value="Western Cape">Western Cape</option>
                </select>
                <label for="floatingInput">Province</label>
            </div>
            <div class="form-floating mb-3">
                <input name="City" type="text" class="form-control" id="floatingCity" placeholder="eg. Port Elizabeth" required>
                <label for="floatingInput">City</label>
            </div>
        </div>
        <br />
        <div id="buttons">
            <button type="submit" class="btn btn-success">Add Campus</button>
             <a asp-action="Index" class="btn btn-succes" style="background-color: #084E62; color: white; margin-top: 4px;">Back</a>
