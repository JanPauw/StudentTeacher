@model StudentTeacher.Models.Teacher

@{
    ViewData["Title"] = "Details";
    //Email to use in table
    string email = Model.Number + "@vcconnect.edu.za";
}


@*Main Content*@
<div>
    <label class="h1">Teacher Details: @Model.FirstName @Model.LastName</label>
    <a style="float: right;" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Number">
        <i class="bi bi-pencil-square"></i> Edit Details
    </a>
    <br />
    <table id="tblName">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.FirstName
                </td>
                <td>
                    @Model.LastName
                </td>
            </tr>
        </tbody>
    </table>
    <br />
    <table id="tblNumber">
        <thead>
            <tr>
                <th>
                    Teacher Number
                </th>
                <th>
                    School
                </th>
                <th>
                    Email
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Model.Number
                </td>
                <td>
                    @Model.School
                </td>
                <td>
                    <a href="mailto:@email">@email</a>
                </td>
            </tr>
        </tbody>
    </table>
    <br />
    <hr />
    <br />




</div>
<style>
    main {
        width: 100% !important;
        background-color: white;
        padding: 3%;
    }

    main {
        box-shadow: 0px 0px 15px 5px rgba(0, 0, 0, 0.1);
    }

    table {
        width: 100%;
    }

    #tblName th, #tblName td {
        width: 50%;
    }

    #tblNumber th, #tblNumber td {
        width: 40%;
    }

    #tblModules th, #tblModules td {
        width: 30%;
    }

    #tblGradings th, #tblGradings td {
        width: 20%;
    }

    table {
        width: 100%;
    }

        table thead tr {
            background-color: #084E62;
        }

        table th {
            padding: 1%;
            color: white;
        }

        table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table tbody tr:nth-child(odd) {
            background-color: #E9E9E9;
        }

        table tbody td {
            width: 25%;
            padding: 1%;
            color: black;
        }
</style>
