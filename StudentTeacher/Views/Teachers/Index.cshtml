@model IEnumerable<StudentTeacher.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<h1>Teachers</h1>

<p>

</p>

<div id="divTeachers" class="table-responsive">
    <table id="teacherTable">
        <thead>
            <tr>
                <th>
                    Full Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.School)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.School)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Number" style="float: right; width: 100px;" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a id="btnDetails" asp-action="Details" asp-route-id="@item.Number" style="float: right; width: 100px; margin-right: 5px;" class="btn btn-primary"><i class="bi bi-info-circle"></i> Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    main {
        width: 100% !important;
        background-color: white;
        padding: 3%;
    }

    main {
        box-shadow: 0px 0px 15px 5px rgba(0, 0, 0, 0.1);
    }

    /*Scrollable Tables - START*/
    .table-responsive {
        height: auto;
        max-height: 75vh;
        overflow-y: scroll auto;
    }

    thead tr:nth-child(1) th {
        background: #084E62;
        position: sticky;
        top: 0;
        z-index: 10;
    }
    /*Scrollable Tables - END*/

    table {
        width: 100%;
    }

    #tblName th, #tblName td {
        width: 50%;
    }

    #tblNumber th, #tblNumber td {
        width: 50%;
    }

    #tblModules th, #tblModules td {
        width: 30%;
    }

    #tblGradings th, #tblGradings td {
        width: 20%;
    }

    table {
        width: 100%;
    }

        table thead tr {
            background-color: #084E62;
        }

        table th {
            padding: 1%;
            color: white;
        }

        table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table tbody tr:nth-child(odd) {
            background-color: #E9E9E9;
        }

        table tbody td {
            width: 25%;
            padding: 1%;
            color: black;
        }

    /*Responive design*/

    @@media only screen and (max-width:1024px) {
        #btnDetails {
            margin-right: 2px !important;
        }
    }



    @@media only screen and (max-width:768px) {
        #btnDetails {
            margin-right: 0px !important;
            margin-top: 5px !important;
        }

        #divTeachers table th {
            min-width: 20vw !important;
        }
    }

    @@media only screen and (max-width:425px) {
        #divTeachers table th {
            min-width: 40vw !important;
        }
    }

    @@media only screen and (max-width:320px) {
        #divTeachers table th {
            min-width: 40vw !important;
        }

        a {
            width: 100px;
        }
    }
</style>