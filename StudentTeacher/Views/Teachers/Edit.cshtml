@model StudentTeacher.Models.Teacher

@{
    ViewData["Title"] = "Edit";
}
<div id="Lec_Login">
    <img src="~/images/EditTeacher.png" />
    <br />
    <br />
    <form method="post" asp-action="Edit">
        <div class="form-group">
            <div class="form-floating mb-3">
                <input name="FirstName" type="text" class="form-control" id="floatingFirstName" required value="@ViewBag.FirstName">
                <label for="floatingInput">First Name</label>
            </div>
            <div class="form-floating mb-3">
                <input name="LastName" type="text" class="form-control" id="floatingLastName" required value="@ViewBag.LastName">
                <label for="floatingInput">Last Name</label>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="School" class="form-control" asp-items="ViewBag.School"></select>
                <label for="floatingInput">School</label>
            </div>
        </div>
        <br />
        <div id="buttons">
            <button type="submit" class="btn btn-success">Save Changes</button>
            <button asp-action="Details" asp-route-id="@Model.Number" class="btn btn-succes" style="background-color: #084E62; color: white; margin-top: 4px;">Back</button>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


    <style>
        #Lec_Login {
            width: 35%;
            margin: auto;
            margin-top: 3%;
            padding: 3%;
            box-shadow: 0px 0px 15px 5px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        #Lec_Login {
            background-color: white;
        }

            #Lec_Login img {
                width: 80%;
            }

        #tbl_or {
            width: 100%;
        }

            #tbl_or td {
                width: 33%;
                text-align: center;
            }

        #buttons button, #buttons a {
            width: 100%;
        }


        /*Responive design*/

        @@media only screen and (max-width:1024px) {
            #Lec_Login {
                width: 50%;
            }
        }

        @@media only screen and (max-width:768px) {
            #Lec_Login {
                width: 60%;
            }
        }

        @@media only screen and (max-width:425px) {
            #Lec_Login {
                width: 100%;
            }
        }

        @@media only screen and (max-width:375px) {
            #Lec_Login {
                width: 100%;
            }
        }

        @@media only screen and (max-width:320px) {
            #Lec_Login {
                width: 100%;
            }
        }

    </style>