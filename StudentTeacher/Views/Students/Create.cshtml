
@{
    ViewData["Title"] = "Add School";

    //Get List of Campuses from Back-End
    List<Campus> campuses = ViewBag.ListCampuses;
}

<div id="Lec_Login">
    <img src="~/images/AddStudent.png" />
    <br />
    <br />
    <form method="post" asp-action="Create">
        <div class="form-group">
            <div class="form-floating mb-3">
                <input name="Number" type="text" class="form-control" id="floatingNumber" placeholder="eg. ST10118596" required>
                <label for="floatingInput">Student Number</label>
            </div>
            <div class="form-floating mb-3">
                <input name="FirstName" type="text" class="form-control" id="floatingFirstName" placeholder="eg. John" required />
                <label for="floatingInput">First Name</label>
            </div>
            <div class="form-floating mb-3">
                <input name="LastName" type="text" class="form-control" id="floatingLastName" placeholder="eg. Doe" required />
                <label for="floatingInput">Last Name</label>
            </div>
            <div class="form-floating mb-3">
                <select name="Year" class="form-select" id="floatingLastName" placeholder="eg. Doe" required>
                    <option value="1">First Year</option>
                    <option value="2">Second Year</option>
                    <option value="3">Third Year</option>
                    <option value="4">Fourth Year</option>
                </select>
                <label for="floatingInput">Year of Study</label>
            </div>
            <div class="form-floating mb-3">
                <select name="Campus" class="form-select" id="floatingCampus" required>
                    @foreach (var campus in campuses)
                    {
                        <option value="@campus.Name">@campus.Name</option>
                    }

                </select>
                <label for="floatingInput">Campus</label>
            </div>
        </div>
        <br />
        <div id="buttons">
            <button type="submit" class="btn btn-success">Add Student</button>
            <a asp-action="Index" class="btn btn-succes" style="background-color: #084E62; color: white; margin-top: 4px;">Back</a>
        </div>
    </form>
</div>

<style>
    #Lec_Login {
        width: 35%;
        margin: auto;
        margin-top: 3%;
        padding: 3%;
        box-shadow: 0px 0px 15px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    #Lec_Login {
        background-color: white;
    }

        #Lec_Login img {
            width: 80%;
        }

    #tbl_or {
        width: 100%;
    }

        #tbl_or td {
            width: 33%;
            text-align: center;
        }

    #buttons button, #buttons a {
        width: 100%;
    }

    /*Responive design*/

    @@media only screen and (max-width:1024px) {
        #Lec_Login {
            width: 50%;
        }
    }

    @@media only screen and (max-width:768px) {
        #Lec_Login {
            width: 60%;
        }
    }

    @@media only screen and (max-width:425px) {
        #Lec_Login {
            width: 100%;
        }
    }

    @@media only screen and (max-width:375px) {
        #Lec_Login {
            width: 100%;
        }
    }

    @@media only screen and (max-width:320px) {
        #Lec_Login {
            width: 100%;
        }
    }
</style>